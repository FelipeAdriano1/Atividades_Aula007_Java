package localizaCaracter;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

public class localizarChar {

	public static void main(String[] args) throws IOException{
		
		BufferedReader reader = new BufferedReader(new InputStreamReader(System.in));
		String palavra;
		int buscar;
		int numVogais = 0;
		
		System.out.println("Digite uma palavra: ");
		palavra = reader.readLine();
		
		palavra = palavra.toLowerCase();
		
		System.out.println("Digite a letra a ser buscada: ");
		buscar = reader.read();
		reader.close();
		
		buscar = buscar.toLowerCase();
		
		for (int i = 0; i < palavra.length(); i++) {
			
			if(palavra.charAt(i) == buscar) {
				numVogais++;
				
				System.out.println("\nNúmero de vogais: " 
				+ numVogais + "\nVogal: " + palavra.charAt(i) + "\nPosição da vogal: " + i);
			}
		}
	}
}
